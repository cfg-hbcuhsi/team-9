

  <header class='bg-light'>
    <div class="container">
      <h1 class="header-text">Course List</h1>
    </div>
  </header>
<div class="container course-wrapper">
{{#each courses}}
    <div class="card ml-4 mb-4" style="width: 18rem;">
      {{#if ../isAdmin}}
      <a id="edit-link"href="/courses/edit/{{this._id}}"><i class="far fa-edit"></i></a>
      {{/if}}
    <img src={{this.previewImage}} class="card-img-top" alt="preview-image">
    <div class="card-body">
    <a href="/course/details/{{this.id}}" class="">
      <h5 class="card-title">{{this.code}}</h5>
      <p class="card-text">{{this.name}}</p>
        <p>{{this.term}}</p>  
      </a>
    </div>
  </div>
{{/each}}    
</div>